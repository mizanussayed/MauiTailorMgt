<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MYPM.Pages.GalleryListPage"
             Title="Gallery">
    <Grid>
        <!-- Gallery display -->
        <CollectionView x:Name="ImageGallery" ItemsSource="{Binding Images}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="0" Margin="5" Stroke="Gray">
                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" WidthRequest="150" HeightRequest="150"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Button to add new image -->
        <Button Text="+" 
                HorizontalOptions="EndAndExpand" 
                VerticalOptions="StartAndExpand"
                BackgroundColor="DarkGray"
                TextColor="White"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"
                Clicked="OnAddImageClicked"
                Margin="10"/>
    </Grid>
</ContentPage>
