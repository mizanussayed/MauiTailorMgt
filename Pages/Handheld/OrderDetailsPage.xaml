<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MYPM.Models"
             xmlns:vm="clr-namespace:MYPM.ViewModels"
             x:Class="MYPM.Pages.Handheld.OrderDetailsPage"
             Shell.NavBarIsVisible="False"
             x:DataType="models:NewOrderModel"
             Title="{Binding CustomerName}">

    
    <Grid RowDefinitions="Auto, 400" Margin="20">
        <VerticalStackLayout VerticalOptions="Start" Spacing="8">
            <Label Text="{Binding CustomerName, StringFormat='Name {0}'}"/>
            <BoxView Style="{StaticResource HRule}"/>
        </VerticalStackLayout>
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*,*"
              ColumnSpacing="8" Margin="0,8">
            <Label Text="{Binding MobileNumber, StringFormat='Mobile : {0}'}" Grid.Column="0" VerticalOptions="Center"/>
            <Label Text="{Binding Address, StringFormat='Address : {0}'}" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start"/>
            <Label Text="{Binding DueAmount, StringFormat='${0:N2}'}" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Start"/>
        </Grid>
    </Grid>
</ContentPage>
